<database>

    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>

    <charset>utf8</charset>

    <table>

        <name>*dbprefix*zimbradrive_users</name>

        <declaration>

            <field>
                <name>uid</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>256</length>
            </field>

            <field>
                <name>display_name</name>
                <type>text</type>
                <default></default>
                <notnull>false</notnull>
                <length>256</length>
            </field>

        </declaration>

    </table>

</database>
